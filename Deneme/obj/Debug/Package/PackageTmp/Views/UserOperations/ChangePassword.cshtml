
@model Deneme.Models.ChangePasswordModel
@{

    Layout = null;
}


@using (Html.BeginForm("ChangePassword", "UserOperations", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{

    <div class="block push-bit">
        <div class="form-horizontal">
            <div class="login-title text-center alert-success">
                @*<h3> <strong>@Deneme.Resource.AddReconciliationDetails </strong></h3>*@
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-xs-12">


                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = Deneme.Resource.OldPassword } })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">


                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = Deneme.Resource.NewPassword } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">


                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = Deneme.Resource.ConfirmPassword } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group form-actions">

                <div class="col-xs-12  text-center">

                    <input type="submit" value="Submit" class="btn btn-sm btn-primary" />

                </div>
            </div>

        </div>

    </div>
}
