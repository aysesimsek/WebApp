@model Deneme.Models.CariBilgileri
@{

    Layout = null;
}


@using (Html.BeginForm("Add_CEY", "CurrentInformations", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.CariBilgileriId)
    <div class="block push-bit">
        <div class="form-horizontal">
            <div class="login-title text-center alert-success">
                <h3> <strong>@Deneme.Resource.AddCurrentDetails </strong></h3>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="col-xs-12">
                    @Html.DropDownList("ŞablonId", Deneme.Resource.SelectTemplateName)
                    @Html.ValidationMessageFor(model => model.ŞablonId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12 text-center">
                    @Html.Raw(ViewBag.Error)
                    <input type="file" name="excelfile" id="fu1" />
                    <br />
                    <input type="submit" value=@Deneme.Resource.Submit class="btn btn-default btn-primary" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 text-center">
                    <div style="width: 300px">
                        <div id="progressbar" style="position: center; display: none">
                            <span style="position: center; left: 50%; top: 20%" id="progressBar-label">
                                @Deneme.Resource.Uploading
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
}
