
@{
    Layout = null;
}

<!DOCTYPE html>

    <html>
    <head>
        <meta charset="utf-8" />
        <title>Ubold - Responsive Admin Dashboard Template</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <link rel="shortcut icon" href="~/assets/images/favicon.ico">

        <!-- App css -->
        <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/assets/css/icons.css" rel="stylesheet" />
        <link href="~/assets/css/style.css" rel="stylesheet" />
        <script src="~/assets/js/modernizr.min.js"></script>
    </head>
    <body>
        @using (Html.BeginForm("AddEvidenceFile", "CurrentEvidenceFile", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitForm(this)" }))
    {
        @*@ViewBag.MutabakatDetayId*@
        <div class="account-pages"></div>
        <div class="clearfix"></div>
        <div class="wrapper-page">
            <div class="card-box  bg-success">
                <br />
                <div class="panel-heading bg-white">
                    <h4 class="text-center card-header">
                        Mutabakatci
                    </h4>
                </div>
                <br />
                <div class="row bg-success">
                    <div class="col-sm-12">
                        <div class="card-box bg-lightdark">
                            <h4 class="m-t-0 header-title"><b>Bootstrap FileStyle</b></h4>
                            <p class="text-muted m-b-15 font-13">
                                You can limit the number of elements you are allowed to select via the
                                <code>
                                    data-max-option
                                </code>
                                attribute. It also works for option groups.
                            </p>

                            <div class="row">

                                <div class="p-20">
                                    <div class="col-sm-12">

                                        <form class="form-horizontal">

                                            <div class="form-group m-b-0 ">

                                                <input type="file" data-buttonText="@Deneme.Resource.ChooseFile" class="filestyle" data-placeholder="@Deneme.Resource.NoFile" name="file" data-buttonname="btn-info" data-iconname="fa fa-cloud-upload">
                                            </div>

                                        </form>

                                        <div class="form-group text-center m-t-30 m-b-0">
                                            <button type="submit" class="btn btn-rounded btn-white waves-effect waves-light">Upload</button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/assets/js/jquery.min.js"></script>
        <script src="~/assets/js/bootstrap.min.js"></script>
        <script src="~/assets/js/bootstrap-filestyle.min.js"></script>
}
    </body>
</html>
