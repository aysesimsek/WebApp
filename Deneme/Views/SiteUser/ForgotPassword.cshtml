@model Deneme.Models.SiteUser
@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" lang="tr" />
    <title>MUTABAKATCIM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <link rel="shortcut icon" href="assets/images/favicon.ico">

    @*<title>Ubold - Responsive Admin Dashboard Template</title>*@

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css" />

    <script src="~/assets/js/modernizr.min.js"></script>

</head>
<body>

    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <ul class="m-t-10">
        <li class="list-inline-item dropdown notification-list">
            <a class="nav-link dropdown-toggle waves-effect waves-light nav-user" data-toggle="dropdown" href="#" role="button"
               aria-haspopup="false" aria-expanded="false">
                <i class="fa fa-language fa-2x"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right profile-dropdown text-md-center" aria-labelledby="Preview">
                <!-- item-->

                @foreach (var i in Deneme.SiteLanguages.AvailableLanguages)
                {
                    <div>
                        <span>
                            @Html.ActionLink(i.LangFullName, "ChangeLanguage", "SiteUser", new { lang = i.LangCultureName }, null)
                        </span>
                    </div>
                }
            </div>
        </li>
    </ul>
    <div class="wrapper-page">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-box">
                <div class="panel-heading">
                    <h4 class="text-center">
                        <a href="index.html" class="logo">
                            <img src="~/assets/images/logo.png" alt="" height="40" class="logo-sm">
                        </a>
                        MUTABAKATCIM
                    </h4>


                </div>

                <div class="p-20">
                    <form method="post" action="#" role="form" class="">
                        <div class="alert alert-info alert-dismissable">
                            @Deneme.Resource.ResetHeader
                        </div>


                        @if (ViewBag.Message != null && Convert.ToBoolean(ViewBag.Status))
                        {
                            <div class="login-title text-center">
                                <strong class="text-success">@ViewBag.Message</strong>
                            </div>
                        }
                        else
                        {
                            <div class="login-title text-center">
                                <strong class="text-danger">@ViewBag.Message</strong>

                            </div>
                        }




                        <div class="form-group-custom m-t-40">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @id = "user-email", @class = "form-control input-lg", @placeHolder = Deneme.Resource.Email } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<i class="bar"></i>
                        </div>

                        <div class="form-group text-center m-t-20 mb-0">
                            <button class="btn btn-success btn-block text-uppercase waves-effect waves-light"
                                    type="submit">
                                @Deneme.Resource.ResetPassword

                            </button>
                        </div>
                        <div class="col-xs-12 text-center">

                            <small> <br /> @Html.ActionLink(Deneme.Resource.BackToLogin, "Login", "SiteUser")</small>

                        </div>
                    </form>
                </div>

            </div>
        }
    </div>



    <!-- jQuery  -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script><!-- Popper for Bootstrap -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

</body>
</html>